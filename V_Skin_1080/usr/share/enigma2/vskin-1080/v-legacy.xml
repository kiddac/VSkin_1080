	<widget source="languages" render="Listbox" position="0,215" size="1361,750" foregroundColor="fg1" backgroundColor="bg-mm-dark" foregroundColorSelected="selected" backgroundColorSelected="selected-gfx-bg" selectionPixmap="v-selectbars/selectbar-907-r.png" backgroundPixmap="v-selectbars/selectbar-bg.png" transparent="1" zPosition="2">
		<convert type="TemplatedMultiContent">{"template": [
				MultiContentEntryPixmapAlphaBlend(pos = (129,8), size = (90,60), png = 2), # index 2 is the pixmap,
				MultiContentEntryText(pos = (279,0), size = (540,75), flags = RT_HALIGN_LEFT|RT_VALIGN_CENTER, text = 1), # index 1 is the language name
			
				],
				"fonts": [gFont("Regular",33)],
				"itemHeight": 75
				}</convert>
	</widget>
